<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.magus.cryptocompare.ui.main.GraphView
            android:id="@+id/gvDaily"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btgDaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/gvDaily"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bDaily1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bDaily3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bDaily5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"

                />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.magus.cryptocompare.ui.main.GraphView
            android:id="@+id/gvHourly"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/btgDaily" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btgHourly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@+id/gvHourly"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bHourly1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bHourly3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bHourly5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"

                />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.magus.cryptocompare.ui.main.GraphView
            android:id="@+id/gvMinute"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            app:layout_constraintTop_toBottomOf="@id/btgHourly"
            app:selectionRequired="true" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btgMinute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@+id/gvMinute"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bMinute1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bMinute3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bMinute5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"

                />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>